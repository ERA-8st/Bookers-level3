
<div class="container">
<p class="notice">
	<%= notice %>
</p>
	<div class="row">
		<div class="col-xs-3">
			<%= render "books/list", books: @booksc, users: @users, book: @book, user: @user %>
		</div>
		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table table-striped">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg"%></td>
					<td><%= link_to "#{book.title}", book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>