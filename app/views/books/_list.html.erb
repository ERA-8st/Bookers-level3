<h1>User info</h1>
<p> <%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg"%></p>
<p>name <%= user.name %></p>
<p>introduction <%= user.introduction %></p>
<% if user.id == current_user.id %>
<%= link_to "edit", edit_user_path(current_user.id) %>
<% else %>
<%= link_to "edit", user_path(user.id) %>
<% end %>


<h1>New book</h1>
<%= form_for(book) do |f| %>
	<% if book.errors.any? %>
		<h2><%= book.errors.count %>件のエラーが発生しました。</h2>
		<ul>
			<%= book.errors.full_messages.each do |message| %>
				<li><p>error</p><%= message %></li>
			<% end %>
		</ul>
	<% end %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>0pinion</h4>
	<%= f.text_area :body %>
	<br>
	<%= f.submit "Create Book" %>
<% end %>