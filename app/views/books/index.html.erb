<h1>Books</h1>
<table>
	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td>user</td>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
	</tr>
	<% end %>
</table>
<h1>New book</h1>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
		<ul>
			<%= @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>0pinion</h4>
	<%= f.text_area :body %>
	<br>
	<%= f.submit "Create Book" %>
<% end %>